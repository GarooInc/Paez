<section class="relative w-full md:h-screen h-[1110px] flex overflow-hidden full-bleed-header header-bg"
     style="--header-bg: url('{{ section.settings.background_image | image_url }}');">
     


    <div class="flex flex-col w-full md:items-start items-center justify-center md:pt-55 pt-65">

        <div class="z-2 flex items-center gap-2 px-15">
            <div class="flex gap-1">
                {% for i in (1..5) %}
                <div class="md:w-6 md:h-6 w-4 h-4 bg-[#24b880] flex items-center justify-center">
                    <div class="md:w-4 md:h-4 h-3.5 w-3.5 ">
                        {% render 'star' %}
                    </div>
                </div>
                {% endfor %}
            </div>

            <p class="text-white md:text-lg text-sm font-medium">
                Excellent 4.7
            </p>
        </div>

        <div class="z-2">
            <h1 class="text-left text-white md:px-15 text-5xl font-bold pt-10 ">
            {{ section.settings.page_title | newline_to_br }}
            </h1>
        </div>

        <div class="z-2">
            <p class="text-left  md:px-15 md:text-lg text-md md:pt-10 pt-5 text-white">
            {{ section.settings.page_descripction }}
            </p>
        </div>


        <div class="flex z-2 pointer-events-none px-15 md:pt-5 pt-8">
            <a
            href="/"
            class="pointer-events-auto bg-white flex items-center justify-center 
                    rounded-xl md:px-8 md:py-2 py-3 px-10 hover:opacity-70 transition-opacity"
            >
            <span class="text-black text-lg font-semibold">
                {{section.settings.button_text}}
            </span>
            </a>
        </div>

        

    </div>
    <div class="w-full flex absolute bottom-0 md:left-15 left-10 md:py-20 py-10 gap-20 overflow-hidden">
        {% for i in (1..20) %}
            <p class="text-white text-xl">Logo</p>
        {% endfor %}
    </div>
</section>

<style>
.full-bleed-header{
  width: 100vw;
  margin-left: calc(50% - 50vw);
  margin-right: calc(50% - 50vw);
}

.header-bg{
  background-image: var(--header-bg);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;

  overflow: hidden;
}

.header-bg {
  background-image: var(--header-bg);
}

@media (max-width: 768px) {
  .header-bg {
    background-image: url('{{ section.settings.background_image_mobile | image_url }}');
  }
}



</style>



{% schema %}
{
  "name": "Header main section",
  "settings": [
    
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image desktop"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background Image mobile"
    },
    
    {
      "type": "textarea",
      "id": "page_title",
      "label": "Page Title",
      "default": "Slide heading"
    },
    {
      "type": "text",
      "id": "page_descripction",
      "label": "Page Descripction",
      "default": "Tell a story"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto de boton",
      "default": "Shop now"
    }
    
  ],
  "presets": [
    {
      "name": "Header Main section",
    }
  ]
}



{% endschema %}

