<div class="full-bleed flex flex-col lg:h-[700px] xl:h-[750px] md:h-[650px] h-[600px]">
    <div class="w-full flex justify-center items-start py-5 md:pt-10 pt-8">
        <h1 class="text-center md:text-4xl text-lg font-bold">
            {{ section.settings.title_page }}
        </h1>
    </div>
    
    <div class="w-full flex justify-center items-start">
      {% for block in section.blocks %}
          <button class="tab-item relative md:text-3xl text-xl font-bold pb-2 px-4"
                  data-tab="{{ block.id }}">
              {{ block.settings.collection_title }}
              <span class="tab-underline absolute left-0 bottom-0 w-full h-[3px] 
                {% if forloop.first %}bg-black{% else %}bg-gray-300{% endif %} transition-colors duration-300"></span>
          </button>
      {% endfor %}
  </div>

    <div class="w-full mt-10">
        {% for block in section.blocks %}
            <div class="collection-content relative overflow-hidden top-10 md:px-10 px-5 {% unless forloop.first %}hidden{% endunless %}" 
                 data-content="{{ block.id }}"
                 {{ block.shopify_attributes }}>
                
                <div class="sliderTrack flex transition-transform duration-500 ease-out">
                  
                    {% comment %} Primer slide {% endcomment %}
                    <div class="shrink-0 sm:w-1/2 md:w-1/3 xl:w-1/4 w-[300px] relative rounded-2xl overflow-hidden">
                        <img
                          src="{{ block.settings.image | image_url: width: 1000 }}"
                          class="absolute inset-0 min-w-full min-h-full object-cover"
                          width="{{ block.settings.image.width }}"
                          height="{{ block.settings.image.height }}">

                        <div class="absolute inset-0 bg-black/50"></div>

                        <div class="relative z-10 flex flex-col justify-between h-full p-6">
                            <div>
                                <p class="text-white lg:text-2xl text-xl pt-10">
                                    {{ block.settings.history }}
                                </p>
                            </div>
                            {% if block.settings.btn_text %}
                              <div>
                                  <a href="{{ block.settings.collection.url }}"
                                    class="inline-block bg-white text-black px-4 py-2 rounded-full hover:opacity-80 transition-colors duration-300">
                                      {{ block.settings.btn_text }}
                                  </a>
                              </div>
                            {% endif %}
                        </div>
                    </div>

                    {% comment %} Productos {% endcomment %}
                    {% for product in block.settings.collection.products %}
                        <div class="shrink-0 sm:w-1/2 md:w-1/3 xl:w-1/4 w-[300px] px-4">
                            <a href="{{ product.url }}" class="group block">
                                <div class="w-full xl:h-[360px] md:h-[280px] h-[260px] bg-white rounded-2xl overflow-hidden relative">
                                    {% if product.media.size > 1 %}
                                        {% assign second_image = product.media[1] %}

                                        <img
                                          src="{{ product.featured_image | image_url: width: 800 }}"
                                          class="absolute top-1/2 left-1/2 min-w-full min-h-full -translate-x-1/2 -translate-y-1/2 object-cover transition-opacity duration-500 group-hover:opacity-0"
                                          width="{{ product.featured_media.width }}"
                                          height="{{ product.featured_media.height }}">

                                        <img
                                          src="{{ second_image | image_url: width: 800 }}"
                                          class="absolute top-1/2 left-1/2 min-w-full min-h-full -translate-x-1/2 -translate-y-1/2 object-cover opacity-0 transition-opacity duration-500 group-hover:opacity-100"
                                          width="{{ product.featured_media.width }}"
                                          height="{{ product.featured_media.height }}">
                                    {% else %}
                                        <img
                                          src="{{ product.featured_image | image_url: width: 800 }}"
                                          class="absolute top-1/2 left-1/2 min-w-full min-h-full -translate-x-1/2 -translate-y-1/2 object-cover"
                                          width="{{ product.featured_media.width }}"
                                          height="{{ product.featured_media.height }}">
                                    {% endif %}
                                </div>
                            </a>
                            
                            <p class="pt-5 text-md font-bold">{{ product.title }}</p>
                            <div class="pt-2 text-sm font-bold">
                                {% if product.compare_at_price > product.price %}
                                    <span class="line-through text-gray-400 ml-2">
                                        {{ product.compare_at_price | money }}
                                    </span>
                                    <span class="pl-2 text-black">
                                        {{ product.price | money }}
                                    </span>
                                    <div class="absolute z-20 top-8 lg:pl-50 xl:pl-60 pl-10">
                                        <p class="text-xl">SALE</p>
                                    </div>
                                {% else %}
                                    <span>{{ product.price | money }}</span>
                                {% endif %}
                            </div>
                            <a href="{{ product.url }}">
                                <p class="pt-1 text-sm hover:opacity-30 transition-opacity">Learn more</p>
                            </a>
                        </div>
                    {% endfor %}
                </div>

                <!-- Flechas -->
                <div class="flex justify-between absolute inset-0 items-center px-4 pointer-events-none z-20">
                    <button class="prevBtn pointer-events-auto">{% render 'arrow-slidder2' %}</button>
                    <button class="nextBtn pointer-events-auto">{% render 'arrow-slidder' %}</button>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>
.full-bleed{
  width: 100vw;
  margin-left: calc(50% - 50vw);
  margin-right: calc(50% - 50vw);
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const tabs = document.querySelectorAll(".tab-item");
  const contents = document.querySelectorAll(".collection-content");

  tabs.forEach(tab => {
    tab.addEventListener("click", function () {
      const tabId = this.dataset.tab;

      // Cambiar underline
      tabs.forEach(t => {
        t.querySelector(".tab-underline").classList.remove("bg-black");
        t.querySelector(".tab-underline").classList.add("bg-gray-300");
      });

      this.querySelector(".tab-underline").classList.remove("bg-gray-300");
      this.querySelector(".tab-underline").classList.add("bg-black");

      // Cambiar colecciÃ³n visible
      contents.forEach(content => {
        content.classList.add("hidden");
        if (content.dataset.content === tabId) {
          content.classList.remove("hidden");
        }
      });
    });
  });

  
});
</script>

<script src="{{ 'slider.js' | asset_url }}" defer></script>
<script>
document.addEventListener("DOMContentLoaded", function () {
  initSlider('.collection-content');
});
</script>


