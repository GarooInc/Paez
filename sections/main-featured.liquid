        },
        {
          "type": "text",
          "id": "history",
          "label": "History text"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "main",
      "blocks": [
        {
          "type": "collection_tab",
          "settings": {
            "collection_title": "Women"
          }
        },
        {
          "type": "collection_tab",
