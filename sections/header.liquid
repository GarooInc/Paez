<div class="w-full bg-black" style="width: 100vw; margin-left: calc(50% - 50vw);">
  <div class="h-10 flex items-center justify-center">
    <p class="text-white">{{ section.settings.newsletter }}</p>
  </div>
</div>

<header class="absolute left-0 top-10 w-full h-10 text-black py-8 px-2 bg-transparent grid grid-cols-3 items-center z-10">

  <div class="header__menu flex justify-start hover:transparent/30">

    {% for link in section.settings.menu.links %}
      <div class="pr-4 flex text-lg font-normal hover:opacity-70 transition-opacity">
        {{ link.title | link_to: link.url }}
      </div>
    {% endfor %}
  </div>

  {% if section.settings.header_title != blank %}
    <div class="text-center pr-12 text-3xl font-semibold uppercase tracking-widest hover:opacity-70 transition-opacity">
      {{ section.settings.header_title }}
    </div>
  {% else %}
    <h2 class="header__title text-center pr-12 hover:opacity-70 transition-opacity">
      {{ shop.name | link_to: routes.root_url }}
    </h2>

  {% endif %}

  

  <div class="header__icons flex justify-end gap-3 pr-8">
    <div class="w-8">
    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}</div>

    <div class="w-8">
    <a href="{{ routes.cart_url }}" >
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a></div>
    
  </div>
</header>



{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "text",
      "id": "newsletter",
      "label": "newsletter title", 
      "default": "Welcome to our store"
    },
    {
      "type": "text",
      "id": "header_title",
      "label": "Header title",
      "default": "Barner"

    },

  ],
  "presets": [
    {
      "name": "t:general.header",
      "category": "header"
    }
  ]
}
{% endschema %}
